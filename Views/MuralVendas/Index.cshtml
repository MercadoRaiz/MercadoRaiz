@using MercadoRaiz.ViewModels;
@model List<MuralVendasViewModel>
@{
  ViewData["Title"] = "MuralVendasPage";
}

<div class="text-center">
    <br>
    <h1 class="h3"><strong>Listagem de Produtos</strong></h1>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produto</th>
                <th scope="col">Estoque</th>
                <th scope="col">Valor</th>
                <th scope="col">Cidade</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (var produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Nome</th>
                        <td>@produto.Estoque</td>
                        <td>@produto.Valor</td>
                        <td>@produto.Cidade</td>
                        <td>@produto.Id_Produto</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="InterfaceProdutor" asp-action="EditarProdutosPage" asp-route-id="@produto.Id_Produto">Comprar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a class="btn btn-secondary w-100" asp-controller="InterfaceProdutor" asp-action="Index" role="button">Voltar</a>
