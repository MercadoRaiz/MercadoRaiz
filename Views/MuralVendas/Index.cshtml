@model List<ProdutoModel>
@{
    ViewData["Title"] = "MuralVendasPage";
}


<div class = "d-grid gap-2 d-md-flex justify-content-md-start"> 
  <a class="btn btn-primary" role = "button" asp-controller="MuralVendas" asp-action="CarrinhoPage">Carrinho</a>
</div>

<div class="text-center">
    <br>
    <h1 class="h3"><strong>@ViewData["Title"]</strong></h1>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produto</th>
                <th scope="col">Estoque</th>
                <th scope="col">Valor</th>
                <th scope="col">Cidade</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ProdutoModel item in Model)
                {
                    <tr>
                        <th scope="row">@item.Nome</th>
                        <td>@item.Estoque</td>
                        <td>@item.Valor</td>
                        <td>@item.Cidade</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="MuralVendas" asp-action="ComprarPage" asp-route-id="@item.Id_Produto">Comprar</a>
                                <form asp-controller="MuralVendas" asp-action="AdicionarCarrinho" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id_Produto" />
                                    <input type="number" name="quantidade" value="1" min="1" class="form-control d-inline w-50" />
                                    <button type="submit" class="btn btn-danger">Adicionar ao Carrinho</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a class="btn btn-secondary w-100" asp-controller="InterfaceProdutor" asp-action="Index" role="button">Voltar</a>
