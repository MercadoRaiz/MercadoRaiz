@model ProdutoModel
@{
    ViewData["Title"] = "EditarProdutosPage";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Editar Produto.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <div class="top-bar">
        
        <h1><strong>Editar Produto</strong></h1>
    </div>

    <div class="containerPrincipal">

        <form asp-controller="InterfaceProdutor" asp-action="AtualizarProduto" method="post">
            <input type="hidden" asp-for="Id_Produto">

            <div>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Nome" readonly>
            </div>

            <div class="mb-3 campos">
                <input type="number" asp-for="Estoque" class="form-control" placeholder="Estoque">
            </div>

            <div class="mb-3 campos">
                <input type="text" asp-for="Valor" class="form-control" placeholder="Valor do Produto">
            </div>
    
            <div class="mb-3 campos">
                <input type="text" asp-for="Cidade" class="form-control" placeholder="Cidade">
            </div>
    
            <button type="submit" class="btn btn-primary w-100"><i class="fas fa-edit"></i><strong> EDITAR</strong></button>
            <br><br>
            <a class="btn btn-secondary w-100" asp-controller="InterfaceProdutor" asp-action="Index" role="button"><i class="fas fa-arrow-left"></i> VOLTAR</a>
        </form>
    </div>
</body>
</html>
